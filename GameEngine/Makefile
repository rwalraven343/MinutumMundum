TARGETFILE=GameEngine.lib

COMPILERCOMMAND=cl
LINKERCOMMAND=lib

COMPILEROPTIONS=/c /MD /O2
LINKEROPTIONS=

INCLUDEDIRS=
LIBRARYDIRS=

SOURCEFILES=appmath.cpp collisionlist.cpp map.cpp random.cpp solid_octagon.cpp
OBJECTFILES=$(SOURCEFILES:.cpp=.obj)
LIBRARYFILES=

all: $(TARGETFILE)

$(TARGETFILE): $(OBJECTFILES)
	$(LINKERCOMMAND) $(LINKEROPTIONS) $(LIBRARYDIRS) $(OBJECTFILES) $(LIBRARYFILES) /OUT:$(TARGETFILE)

$(OBJECTFILES):
	$(COMPILERCOMMAND) $(COMPILEROPTIONS) $(INCLUDEDIRS) $(SOURCEFILES)

clean:
	del $(TARGETFILE)
	del *.obj
